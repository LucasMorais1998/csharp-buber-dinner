# Este arquivo ajuda a manter as configurações de formatação consistentes em vários editores.
# Para obter mais informações sobre as opções disponíveis, consulte:
# https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference

# Use utf-8 como padrão
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

# Configurações específicas para C#
[*.cs]
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_case_contents_when_block = true
csharp_new_line_before_catch = true
csharp_new_line_before_else = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true
csharp_prefer_braces = true
csharp_prefer_braces_for_control_flow = true
csharp_prefer_braces_for_multiline_lambda_body = true
csharp_prefer_braces_for_single_line_control_flow = true
csharp_prefer_expression_bodied_constructors = true
csharp_prefer_expression_bodied_indexers = true
csharp_prefer_expression_bodied_methods = true
csharp_prefer_expression_bodied_operators = true
csharp_prefer_expression_bodied_properties = true
csharp_prefer_is_null_check_over_reference_equality_method = true
csharp_preserve_single_line_blocks = true
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_cast = true
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_after_comma = true
csharp_space_after_dot = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_semicolon_in_for_statement = true
csharp_space_around_binary_operators = before_and_after
csharp_space_around_declaration_statements = true
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_before_comma = false
csharp_space_before_dot = false
csharp_space_before_open_square_brackets = false
csharp_space_before_semicolon_in_for_statement = false
csharp_space_between_empty_square_brackets = false
csharp_space_between_method_call_name_and_open_parenthesis = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_declaration_parameter_list_open_parenthesis_and_close_parenthesis = false
csharp_space_between_method_declaration_and_return_type = true
csharp_space_between_method_declaration_name_and_open_parenthesis = false
csharp_space_between_parentheses = false
csharp_space_between_square_brackets = false
csharp_space_between_usings = false
csharp_style_expression_bodied_accessors = true
csharp_style_expression_bodied_constructors = true
csharp_style_expression_bodied_delegates = true
csharp_style_expression_bodied_indexers = true
csharp_style_expression_bodied_lambdas = true
csharp_style_expression_bodied_local_functions = true
csharp_style_expression_bodied_methods = true
csharp_style_expression_bodied_operators = true
csharp_style_expression_bodied_properties = true
csharp_style_inline_comment_spacing = one_space
csharp_style_prefer_auto_properties = true
csharp_style_prefer_compound_assignment = true
csharp_style_prefer_index_operator = true
csharp_style_prefer_simplified_boolean_expressions = true
csharp_style_prefer_simplified_interpolation = true
csharp_style_throw_expression = true
